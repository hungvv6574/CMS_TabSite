</head>
    <body id="page-top">
        <header id="page-header" class="navbar-fixed-top">
            <nav class="navbar navbar-default" role="navigation">

                @Display(WorkContext.Layout.PageHeaderTop)

                @Display(WorkContext.Layout.PageNavigationMenu)
            </nav>
        </header>

        <div id="page-body">
            
            @Display(WorkContext.Layout.SectionBannerSlider) 

            @Display(WorkContext.Layout.SectionPageContent)

            @Display(WorkContext.Layout.Content)

            @Display(WorkContext.Layout.SectionAbout)
            
            @Display(WorkContext.Layout.SectionBusinesses)
            
            @Display(WorkContext.Layout.SectionClient)
        </div>

        @Display(WorkContext.Layout.PageFooter) 

        @RenderFootScripts()

        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-554be8e044ec3128"></script>
