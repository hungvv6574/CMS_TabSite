@model CMSSolutions.Websites.Models.DataViewerModel

<div class="container">
    <div id="mainSlider" style="position: relative; margin: 0 auto; top: 0px; left: 0px; width: 1024px !important; height: 500px; overflow: hidden; visibility: hidden;">
        <div data-u="loading" style="position: absolute; top: 0px; left: 0px;">
            <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block; top: 0px; left: 0px; width: 100%; height: 100%;"></div>
            <div style="position:absolute;display:block;background:url('/Images/themes/loading.gif') no-repeat center center;top:0px;left:0px;width:100%;height:100%;"></div>
        </div>
        <div data-u="slides" style="cursor: default; position: relative; top: 0px; left: 0px; width: 1002px; height: 500px; overflow: hidden;">
            @if (Model.ListSliderImages != null && Model.ListSliderImages.Count > 0)
            {
                foreach (var sliderImage in Model.ListSliderImages)
                {
                    <div data-p="225.00" style="display: none;">
                        <img data-u="image" src="@sliderImage.ImageUrl" />
                        <div class="text-item">
                            @if (!string.IsNullOrEmpty(sliderImage.Caption))
                            {
                                <p>
                                    @sliderImage.Caption
                                </p>
                            }
                        </div>
                    </div>
                }
            }
        </div>
        <div data-u="navigator" class="jssor-circle" style="bottom:16px;right:16px;" data-autocenter="1">
            <div data-u="prototype" style="width:16px;height:16px;"></div>
        </div>
        @*<span data-u="arrowleft" class="jssora-icon-left" style="top:0px;left:12px;width:40px;height:58px;" data-autocenter="2"></span>
        <span data-u="arrowright" class="jssora-icon-right" style="top:0px;right:12px;width:40px;height:58px;" data-autocenter="2"></span>*@
    </div>
    
    <div class="clearfix"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        initSliderOption("mainSlider");
    });
</script>